<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#031424"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 分享好友 -->
    <RelativeLayout
        android:id="@+id/rel_share_one"
        android:layout_width="match_parent"
        android:layout_height="36dp">

        <ImageView
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="13dp"
            android:layout_width="14dp"
            android:layout_height="14dp"/>

        <TextView
            android:text="分享给"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginBottom="14dp"
        android:background="@drawable/bg_four_horn"
        android:layout_below="@id/rel_share_one"
        android:layout_above="@id/tv_send"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="47dp">

            <ImageView
                android:id="@+id/search"
                android:src="@mipmap/search_white"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="16dp"
                android:layout_centerInParent="true"
                android:layout_width="18dp"
                android:layout_height="18dp"/>

            <EditText
                android:hint="搜索"
                android:textColorHint="#FFFFFF"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:layout_toRightOf="@+id/search"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_toLeftOf="@id/close"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/close"
                android:src="@mipmap/close"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="16dp"
                android:layout_width="14dp"
                android:layout_height="14dp"/>
            
        </RelativeLayout>

        <View
            android:background="#3F6D7A"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <!-- 列表为 item_share_friends -->

    </LinearLayout>

    <TextView
        android:id="@+id/tv_send"
        android:text="发送"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:background="@mipmap/bg_button"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="17dp"
        android:layout_marginBottom="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>
