<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#031424"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 任务 -->

    <View
        android:layout_width="match_parent"
        android:layout_height="44dp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp">

        <TextView
            android:text="任务信息"
            android:layout_marginLeft="13dp"
            android:textSize="22sp"
            android:textColor="#FFFFFF"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:src="@mipmap/search_white"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="13dp"
            android:layout_width="18dp"
            android:layout_height="18dp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="13dp"
        android:layout_marginBottom="14dp"
        android:layout_marginRight="13dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_start_time"
                android:text="开始时间"
                android:textColor="#FFFFFF"
                android:textSize="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/start_time"
                android:text="5月20日"
                android:textColor="#FFFFFF"
                android:layout_below="@id/tv_start_time"
                android:layout_marginTop="2dp"
                android:textSize="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/week_stari_time"
                android:text="周三"
                android:textColor="#FFFFFF"
                android:layout_alignBottom="@id/start_time"
                android:layout_toRightOf="@id/start_time"
                android:layout_marginRight="4dp"
                android:textSize="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_end_time"
                android:text="开始时间"
                android:textColor="#FFFFFF"
                android:textSize="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/end_time"
                android:text="5月20日"
                android:textColor="#FFFFFF"
                android:layout_below="@id/tv_end_time"
                android:layout_marginTop="2dp"
                android:textSize="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/week_end_time"
                android:text="周三"
                android:textColor="#FFFFFF"
                android:layout_alignBottom="@id/end_time"
                android:layout_toRightOf="@id/end_time"
                android:layout_marginRight="4dp"
                android:textSize="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <View
        android:background="#3F6D7A"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:background="#031424"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.tabs.TabLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="全部"
            android:textSize="12sp"
            android:textColor="#0A2E58"
            android:layout_width="49dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!-- 列表： renwu_list -->
</LinearLayout>